// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String?
  name          String?
  company       String?
  avatar        String?
  provider      String?   // 'email', 'google', 'github', 'linkedin'
  providerId    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Subscription / Stripe
  stripeCustomerId    String?   @unique
  subscriptionTier    String    @default("free") // free, startup, business, custom
  subscriptionStatus  String    @default("active") // active, past_due, canceled
  subscriptionId      String?
  currentPeriodEnd    DateTime?
  interviewsUsed      Int       @default(0)
  resumeMatchesUsed   Int       @default(0)
  
  hiringRequests  HiringRequest[]
  sessions        Session[]
  hiringSessions  HiringSession[]
  apiKeys         ApiKey[]
  usageRecords    ApiUsageRecord[]

  @@index([email])
  @@index([provider, providerId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model HiringRequest {
  id              String   @id @default(cuid())
  userId          String
  title           String
  requirements    String   @db.Text
  jobDescription  String?  @db.Text
  status          String   @default("active") // active, paused, closed
  webhookUrl      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  candidates Candidate[]

  @@index([userId])
  @@index([status])
}

model Candidate {
  id               String   @id @default(cuid())
  hiringRequestId  String
  name             String
  email            String
  resumeText       String   @db.Text
  matchScore       Int?
  status           String   @default("pending") // pending, screening, interviewed, shortlisted, rejected
  evaluationReport Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  hiringRequest HiringRequest @relation(fields: [hiringRequestId], references: [id], onDelete: Cascade)

  @@index([hiringRequestId])
  @@index([status])
  @@index([email])
}

model HiringSession {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  messages  Json     @default("[]")
  status    String   @default("active") // active, completed, archived
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model ApiKey {
  id          String    @id @default(cuid())
  userId      String
  name        String
  key         String    @unique
  prefix      String    // First 8 chars for display (rh_xxxx...)
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  scopes      String[]  @default(["read", "write"])
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  usageRecords ApiUsageRecord[]

  @@index([key])
  @@index([userId])
}

model ApiUsageRecord {
  id               String   @id @default(cuid())
  userId           String
  apiKeyId         String?
  requestId        String?
  endpoint         String
  method           String
  statusCode       Int      @default(200)
  promptTokens     Int      @default(0)
  completionTokens Int      @default(0)
  totalTokens      Int      @default(0)
  cost             Float    @default(0)
  model            String?
  provider         String?
  durationMs       Int      @default(0)
  createdAt        DateTime @default(now())

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  apiKey ApiKey? @relation(fields: [apiKeyId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([apiKeyId])
  @@index([createdAt])
  @@index([endpoint])
  @@index([userId, createdAt])
  @@index([apiKeyId, createdAt])
}
